@using DilekYildizimSensin.Dtos
@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Dilek Yıldızım Sensin</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">



    <style>
        /* General Styles */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #e0f7fa;
            color: #333;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
        }

        .register-container {
            background-color: #fff;
            padding: 30px;
            width: 400px;
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            text-align: center;
            transition: all 0.3s ease;
        }

            .register-container:hover {
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
            }

        h1 {
            color: #005b96;
            font-size: 2em;
            margin-bottom: 20px;
        }

        .input-field {
            margin: 15px 0;
        }

        input[type="text"], input[type="email"], input[type="password"], input[type="number"], select {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border-radius: 8px;
            border: 1px solid #ddd;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            input[type="text"]:focus, input[type="email"]:focus, input[type="password"]:focus, input[type="number"]:focus, select:focus {
                border-color: #005b96;
                box-shadow: 0 4px 8px rgba(0, 91, 150, 0.2);
                outline: none;
            }

        .text-danger {
            font-size: 0.9em;
            color: #e74c3c;
        }

        .register-btn {
            background-color: #005b96;
            color: #fff;
            border: none;
            padding: 12px 0;
            width: 100%;
            border-radius: 8px;
            font-size: 1.1em;
            cursor: pointer;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            margin-top: 15px;
        }

            .register-btn:hover {
                background-color: #004080;
                box-shadow: 0 4px 12px rgba(0, 64, 128, 0.3);
            }

        .login-link {
            display: block;
            margin-top: 15px;
            color: #005b96;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .login-link:hover {
                color: #004080;
            }

        /* Logo Styling */
        .logo {
            width: 100px;
            height: auto;
            margin-bottom: 15px;
        }

        .success-message {
            color: #2ecc71;
            font-weight: bold;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <img src="https://worldwish.org/wp-content/uploads/2022/05/MAW_International_RGB.png" alt="Logo" class="logo">
        <h1>Kayıt Ol</h1>
        <form asp-action="Register" method="post" class="form-group">
            <div>
                <label>Kullanıcı Adı(Sitede gözükecek isim)</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div>
                <label>Email</label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <label>Şifre</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div>
                <label>Şifre Tekrarı</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div>
                <label>Ad</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div>
                <label>Soyad</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div>
                <label>Cinsiyet</label>
                <select asp-for="Gender" class="form-control">
                    <option value="1">Kadın</option>
                    <option value="2">Erkek</option>

                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div>
                <label>Yaş</label>
                <input asp-for="Age" type="number" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <button type="submit" class="register-btn">Kayıt Ol</button>
        </form>

        <a href="@Url.Action("Login", "Home")" class="login-link">Hesabınız varsa buraya tıklayınız...</a>
    </div>


</body>
</html>

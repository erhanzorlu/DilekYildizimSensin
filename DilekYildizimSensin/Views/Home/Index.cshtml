@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dilek Yıldızım Sensin</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        /* Genel Stiller */
        * {
          box-sizing: border-box;
          margin: 0;
          padding: 0;
        }

        body {
          font-family: 'Poppins', sans-serif;
          background-color: #e0f7fa;
          color: #333;
          display: flex;
          flex-direction: column;
          align-items: center;
          margin: 0;
        }

        /* Başlık Stili */
        h1 {
          font-size: 2.5em;
          margin-top: 20px;
          font-weight: 600;
          display: flex;
          align-items: center;
          gap: 10px;
          color: #005b96;
          text-align: center; /* Başlığı ortala */
        }

        .stars {
          color: #f9a825;
          font-size: 1.5em;
        }

        .divider {
          width: 100%;
          height: 2px;
          background-color: #005b96;
          margin-top: 5px;
          margin-bottom: 20px;
        }

        /* Konteyner ve Kart Stilleri */
        .container {
          display: flex;
          width: 90%;
          max-width: 1000px;
          gap: 20px;
        }

        .card {
          background-color: #ffffff;
          border-radius: 12px;
          padding: 20px;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
          flex: 1;
          min-height: 250px;
          text-align: center; /* Kart içeriğini ortala */
        }

        .card h2 {
          color: #005b96;
          margin-bottom: 10px;
          font-weight: 600;
          text-align: center; /* Kart başlıklarını ortala */
        }

        /* Sol Taraftaki Kart Stili */
        .card-left {
          display: flex;
          flex-direction: column;
          gap: 20px;
        }

        .score-circle {
          width: 100px;
          height: 100px;
          border-radius: 50%;
          background-color: #e3f2fd;
          display: flex;
          align-items: center;
          justify-content: center;
          font-size: 1.5em;
          font-weight: bold;
          color: #005b96;
          margin: auto;
          border: 2px solid #90caf9;
        }

        /* Profil Kartı Stili */
        .profile-card {
          display: flex;
          flex-direction: column;
          align-items: center;
          text-align: center; /* Profil kartı içeriğini ortala */
        }

        .profile-card img {
          width: 100px;
          height: 100px;
          border-radius: 50%;
          margin-bottom: 15px;
          border: 3px solid #90caf9;
        }

        .profile-card p, .profile-card ul {
          font-size: 1em;
          color: #555;
          text-align: center; /* Profil metnini ortala */
        }

        .profile-card ul {
          list-style-type: none; /* Madde işaretlerini kaldır */
          padding: 0;
          margin-top: 10px;
        }

        .profile-card ul li {
          display: flex;
          align-items: center; /* İkon ve metni hizala */
          margin: 5px 0;
          padding: 5px 10px;
          border-radius: 8px;
          background-color: #e0f2f1;
        }

        .profile-card ul li img {
          width: 25px; /* İkon boyutunu ayarla */
          height: 25px; /* İkon boyutunu ayarla */
          margin-right: 10px; /* Metin ile ikon arasında boşluk bırak */
        }

        .card ul {
          list-style-type: none; /* Liste işaretlerini kaldır */
          padding: 0; /* Varsayılan padding'i kaldır */
          margin: 0; /* Varsayılan margin'i kaldır */
        }

        .card ul li {
          display: flex;
          align-items: center; /* İkon ve metni hizala */
          margin: 5px 0; /* Aralığı ayarla */
          justify-content: center; /* Yazıları ortala */
        }

        .card ul li img {
          width: 20px; /* İkon boyutunu ayarla */
          height: 20px; /* İkon boyutunu ayarla */
          margin-right: 10px; /* Metin ile ikon arasında boşluk bırak */
        }

        /* Yeni Stil: Liderlik Tablosu Kartı İçin Profil Resimleri */
        .card-left ul li {
          justify-content: center; /* Yazıları ortala */
          padding-left: 0; /* Sol kenardan boşluk bırakma */
        }

        .card-left ul li img {
          margin-right: 10px; /* İkon ile metin arasında boşluk */
        }
    </style>
</head>
<body>

    <h1>Dilek Yıldızım Sensin <span class="stars">★ ★ ★</span></h1>
    <div class="divider"></div>

    <div class="container">

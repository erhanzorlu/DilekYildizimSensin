@using DilekYildizimSensin.Dtos
@model IndexViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard with Logo</title>

    <style>
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background-color: #7CB9E8;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .leaderboard-container {
            width: 300px;
            background-color: #0076CE;
            border-radius: 20px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding: 20px 0;
            position: relative;
        }

        .logo {
            text-align: center;
            margin-bottom: 10px;
        }

            .logo img {
                width: 300px;
                height: auto;
            }

        .leaderboard-header {
            background-color: #ff6f9c;
            border-radius: 10px;
            padding: 10px 20px;
            margin: 10px auto 20px;
            display: inline-block;
            width: 200px;
        }

            .leaderboard-header h1 {
                color: #fff;
                font-size: 1.2rem;
                margin: 0;
                font-weight: bold;
            }

        .leaderboard-list {
            padding: 0 20px;
        }

        .list-item {
            background-color: #fdebd4;
            margin: 10px 0;
            border-radius: 10px;
            display: flex;
            align-items: center;
            padding: 10px;
            font-size: 1rem;
            font-weight: bold;
            color: #0076CE;
            justify-content: start;
        }

        .first-place {
            background: linear-gradient(145deg, #ffd700, #ffa500);
            color: #0076CE;
        }

        .list-item span {
            margin-left: 10px;
        }

        .action-button {
            margin-top: 20px;
        }

            .action-button button {
                background: linear-gradient(145deg, #ffd700, #ffa500);
                border: none;
                border-radius: 20px;
                color: #fff;
                padding: 10px 20px;
                font-size: 1rem;
                font-weight: bold;
                cursor: pointer;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                transition: 0.3s ease;
            }

                .action-button button:hover {
                    background: linear-gradient(145deg, #ffa500, #ffd700);
                    transform: scale(1.05);
                }

    </style>

</head>
<body>
    <div class="leaderboard-container">
        <div class="logo">
            <img src="Logo2.png" alt="Make-A-Wish Logo">
        </div>
        <div class="leaderboard-header">
            <h1>KASIM AYI LİDERLİK TABLOSU</h1>
        </div>
        <div class="leaderboard-list">
            <div class="list-item first-place">
                <span>1.Hazal Sertkaya: 55 puan</span>
            </div>
            <div class="list-item">
                <span>2.İrem Keleş: 45 puan</span>
            </div>
          

        </div>
    </div>
</body>
</html>

@model List<VolunteerScore>
@{
    ViewData["Title"] = "ListVolunteerScores";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int currentMonth = ViewData["Month"] != null ? Convert.ToInt32(ViewData["Month"]) : DateTime.Now.Month;
}


<h2>Gönüllü Puanları</h2>

<!-- Filtreleme Formu -->
<form asp-action="FilterVolunteerScores" asp-controller="Admin" method="get" class="mb-3">
    <div style="margin-bottom: 15px;">
        <label for="year">Yıl:</label>
        <input type="number" name="year" id="year" value="@ViewData["Year"] ?? DateTime.Now.Year" style="margin-right: 10px;" />

        <label for="month">Ay:</label>
      <select name="month" id="month">
            @for (int i = 1; i <= 12; i++)
            {
                <option value="@i" selected="@(i == currentMonth ? "selected" : null)">@i</option>
            }
        </select>

        <button type="submit" class="btn btn-add">Filtrele</button>
    </div>
</form>

<!-- Puanları Listeleme Tablosu -->
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Puan</th>
            <th>Ay</th>
            <th>Yıl</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var score in Model)
            {
                <tr>
                    <td>@score.AppUser.FirstName @score.AppUser.LastName</td>
                    <td>@score.Score</td>
                    <td>@score.Month</td>
                    <td>@score.Year</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" style="text-align: center;">Hiçbir sonuç bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>
@using DilekYildizimSensin.Dtos
@model List<MonthlyUserScoreViewModel>
@{
    ViewData["Title"] = "MonthlyUserScores";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 style="text-align: center; color: #005b96; margin-bottom: 20px;">Bu Ayki Kullanıcı Puanları</h2>

@if (Model?.Any() == true)
{
    <div class="stats-container">
        @foreach (var user in Model.OrderByDescending(u => u.MonthlyScore))
        {
            <div class="card">
                <h3>@user.UserName</h3>
                <p>@user.MonthlyScore Puan</p>
            </div>
        }
    </div>
}
else
{
    <p style="text-align: center; color: #777;">Bu ay herhangi bir kullanıcı puanı bulunamadı.</p>
}

<style>
    .stats-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        margin-top: 20px;
    }

    .card {
        flex: 1 1 calc(25% - 20px); /* Kartların genişliği esnek ve %25 oranında */
        max-width: 200px; /* Maksimum genişlik */
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .card h3 {
            font-size: 1.2em;
            color: #005b96;
            margin-bottom: 10px;
        }

        .card p {
            font-size: 2em;
            color: #f9a825;
            font-weight: bold;
        }

        .card:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease-in-out;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }
</style>